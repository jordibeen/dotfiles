# vim:fileencoding=utf-8:foldmethod=marker

## Fonts {{{
font_family      Hack Nerd Font
font_size 14.0
## }}}

## Cursor {{{
# cursor none
cursor_shape beam
cursor_blink_interval -1
cursor_trail 1
cursor_trail_start_treshold 1
## }}}

## Scrollback {{{
scrollback_lines 10000
## }}}

## Mouse {{{
# url_color #0087bd
url_style curly
strip_trailing_spaces always
### }}}

## Terminal bell {{{
enable_audio_bell yes
## }}}

## Window layout {{{
remember_window_size  yes
draw_minimal_borders yes
window_border_width 0pt
hide_window_decorations true
## }}}

## Color scheme {{{
background_opacity 1
background_image ~/.config/kitty/backgrounds/red-dark-bg.png
background_image_layout scaled
## }}}

## Advanced {{{
notify_on_cmd_finish always 5.0 command notify-send "job finished with status: %s" %c
term xterm-kitty
macos_colorspace default
## }}}

## Keyboard shortcuts {{{
map cmd+enter no_op
map f1 kitten themes darkmode
map f2 kitten themes lightmode
## }}}

# BEGIN_KITTY_THEME
# Lightmode
include current-theme.conf
# END_KITTY_THEME
